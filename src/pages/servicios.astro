    background: var(--color-background);
    padding: var(--space-lg);
    border-radius: var(--radius-md);
    text-align: left;
  }
  
  .sector-examples strong {
    color: var(--color-primary);
    font-size: var(--text-base);
    display: block;
    margin-bottom: var(--space-sm);
  }
  
