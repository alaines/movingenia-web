---
interface Props {
  title: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  height?: 'small' | 'medium' | 'large';
}

const { title, subtitle, ctaText, ctaLink, height = 'large' } = Astro.props;
---

<section class={`hero hero-${height}`}>
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">{title}</h1>
      {subtitle && <p class="hero-subtitle">{subtitle}</p>}
      {ctaText && ctaLink && (
        <div class="hero-cta">
          <a href={ctaLink} class="btn btn-cta btn-lg">{ctaText}</a>
        </div>
      )}
      <slot />
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
    color: white;
    overflow: hidden;
  }
  
  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(130, 202, 111, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(130, 202, 111, 0.08) 0%, transparent 50%);
    pointer-events: none;
  }
  
  .hero-small {
    padding: var(--space-2xl) 0;
  }
  
  .hero-medium {
    padding: var(--space-3xl) 0;
  }
  
  .hero-large {
    padding: 7rem 0;
    min-height: 540px;
    display: flex;
    align-items: center;
  }
  
  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }
  
  .hero-title {
    font-size: var(--text-5xl);
    font-weight: 800;
    margin-bottom: var(--space-lg);
    line-height: 1.1;
    color: white;
    letter-spacing: -0.03em;
  }
  
  .hero-subtitle {
    font-size: var(--text-xl);
    margin-bottom: var(--space-xl);
    color: rgba(255, 255, 255, 0.95);
    line-height: 1.7;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
  }
  
  .hero-cta {
    margin-top: var(--space-xl);
  }
  
  @media (max-width: 768px) {
    .hero-large {
      min-height: 450px;
      padding: var(--space-3xl) 0;
    }
    
    .hero-title {
      font-size: var(--text-4xl);
      letter-spacing: -0.025em;
    }
    
    .hero-subtitle {
      font-size: var(--text-lg);
    }
  }
</style>
